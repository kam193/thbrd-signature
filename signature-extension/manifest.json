{
  "manifest_version": 2,
  "name": "Manipulate your signature",
  "version": "1",
  "applications": {
    "gecko": {
      "id": "signature@thunderbird.extensions.kam193",
      "strict_min_version": "79.0a1"
    }
  },
  "background": {
    "scripts": ["background.js", "authorize.js"]
  },
  "permissions": [
    "accountsRead",
    "identity",
    "*://www.googleapis.com/*"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "experiment_apis": {
    "signatureApi": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "signatureApi"
          ]
        ],
        "script": "implementation.js"
      }
    }
  },
  "browser_action": {
    "default_title": "Set signature"
  }
}
